.main__section.row--flexible.row--align-items-center
    .col
        .main__group-pics
            .main__group-photos
                .group-photos__img-wrapper--large
                    img(src="./img/main/main_photo-large.jpg")
                .group-photos__control
                    svg(width="30" height="30" class="control__item")
                        use(xlink:href="./img/svg/svg-sprite_call.svg#cameraCrossed")
                    svg(width="30" height="30" class="control__item")
                        use(xlink:href="./img/svg/svg-sprite_call.svg#callEnd")
                    svg(width="30" height="30" class="control__item")
                        use(xlink:href="./img/svg/svg-sprite_call.svg#micCrossed")
